<?xml version="1.0"?>
<odoo>

    <record id="view_quant_package_form_save" model="ir.ui.view">
        <field name="name">stock.quant.package.form.save.dynamic.weight</field>
        <field name="model">stock.quant.package</field>
        <field name="inherit_id" ref="delivery.view_quant_package_form_save"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@class='o_row']/span" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//div[@class='o_row']/span" position="after">
                <field name="shipping_weight_uom_id" />
            </xpath>
        </field>
    </record>

</odoo>
